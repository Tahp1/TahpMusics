@model Order
<link rel="stylesheet" href="~/css/checkout.css" />
<p>Vui lòng điền đầy đủ thông tin tại đây</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Chuyển tới</h3>
    <div class="form-group">
        <label>Họ và tên khách hàng:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Địa chỉ</h3>
    <div class="form-group">
        <label>Số điện thoại:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Số chứng minh nhân dân hoặc căn cước công dân:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Thành phố:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tỉnh:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Địa chỉ:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Quốc Gia:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Đặt hàng" />
    </div>
</form>
